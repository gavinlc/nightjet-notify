{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["src/shared/*"]
        }
    },
    "include": [
        "src/shared/**/*"
    ]
} 