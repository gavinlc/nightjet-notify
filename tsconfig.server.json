{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist/server",
        "rootDir": "src/server"
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}